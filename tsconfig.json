{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "types": ["@types/jest"],
    "typeRoots": [
      "./node_modules",
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "example.ts",
    "playground",
    "tests"
  ]
}
